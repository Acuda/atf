<?xml version="1.0"?>
<launch>
    <param name="use_sim_time" value="True" />
    <param name="suite_name" value="testsuite_1" />
    <param name="test_name" value="test_1" />

    <!-- analysis node -->
    <node pkg="atf_testing" type="test_framework.py" name="test_framework" respawn="false" output="screen" />

    <!-- play recordings -->
    <node pkg="rosbag" type="play" name="player" output="screen" args="--delay=5.0 --clock $(find atf_recorder)/data/ts1_t1.bag">
        <remap from="/testing/tf" to="/tf" />
    </node>

</launch>
