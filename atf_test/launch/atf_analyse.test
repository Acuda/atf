<?xml version="1.0"?>
<launch>
    <param name="use_sim_time" value="true" />

    <param name="recorder/test_config_file" value="$(find atf_test)/config/test_config.yaml" />
    <param name="recorder/bagfile_output" value="$(find atf_test)/data/" />
    <param name="test_name" value="ts1_t1" />
    <param name="test_config" value="test_1" />
    <arg name="bagfile" default=""/>

    <test pkg="atf_core" type="test_builder.py" test-name="test_builder" respawn="false" />

    <node pkg="rosbag" type="play" name="player" output="screen" args="--delay=5.0 --clock $(arg bagfile)">
        <remap from="/testing/tf" to="/tf" />
    </node>


</launch>