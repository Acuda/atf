<?xml version="1.0"?>
<launch>
    <!-- TODO: Own time server -->
    <param name="use_sim_time" value="true" />

    <param name="recorder/test_config_file" value="$(find atf_test)/config/test_config.yaml" />
    <param name="recorder/bagfile_output" value="$(find atf_test)/data/" />
    <param name="test_name" value="ts1_t1" />
    <param name="test_config" value="test_1" />

    <test test-name="atf_test" pkg="atf_test" type="atf_test.py" />

    <node name="atf_recorder" pkg="atf_recorder" type="recorder.py" output="screen">
        <param name="robot_config_file" value="$(find atf_test)/config/robot_config.yaml" />
    </node>

</launch>